{
  "name": "ticket-bro",
  "private": true,
  "scripts": {
    "install:all": "npm install --prefix frontend && npm install --prefix backend",
    
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm --prefix frontend run dev",
    "dev:backend": "npm --prefix backend run dev",

    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "npm --prefix frontend run start",
    "start:backend": "npm --prefix backend run start",

    "clean": "rimraf frontend/node_modules backend/node_modules"

  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "rimraf": "^6.1.3"
  }
}
